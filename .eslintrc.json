{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "import", "simple-import-sort"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:import/warnings",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "simple-import-sort/imports": "error", // simple-import-sort로 import 정렬
    "simple-import-sort/exports": "error", // export 정렬 규칙 추가
    "import/order": "off", // import/order 비활성화, simple-import-sort 사용
    "import/newline-after-import": "error", // import 이후 빈 줄 추가 규칙
    "import/no-duplicates": "error" // 중복 import 방지
  }
}
